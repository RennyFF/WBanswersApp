<UserControl
    x:Class="WBNEWANSWEARS.MVVM.View.ActiveView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WBNEWANSWEARS.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:WBNEWANSWEARS.MVVM.ViewModel"
    d:DesignHeight="590"
    d:DesignWidth="820"
    d:DataContext="{d:DesignInstance Type=viewModel:ActiveViewModel}"
    mc:Ignorable="d">
    <Border CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Offset="0.6" Color="#8179B3" />
                <GradientStop Offset="1.5" Color="#69619B" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <StackPanel>
                <TextBlock>MEOW ACTIVE</TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
