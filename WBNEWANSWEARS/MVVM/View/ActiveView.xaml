<UserControl
    x:Class="WBNEWANSWEARS.MVVM.View.ActiveView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:WBNEWANSWEARS.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:WBNEWANSWEARS.MVVM.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewModel:ActiveViewModel}"
    d:DesignHeight="590"
    d:DesignWidth="820"
    mc:Ignorable="d">
    <Border CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Offset="0.6" Color="#8179B3" />
                <GradientStop Offset="1.5" Color="#69619B" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource HeaderPageTextStyle}" Text="Запуск ответов" />
            </StackPanel>
            <Grid Grid.Row="1">
                <ListBox
                    d:ItemsSource="{d:SampleData ItemCount=10}"
                    ItemContainerStyle="{StaticResource ListBoxItemCustomStyle}"
                    ItemsSource="{Binding Users}"
                    SelectionMode="Multiple"
                    Style="{StaticResource ListBoxCustomStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ActiveViewCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>
                                    <iconPacks:PackIconMaterial
                                        Grid.Column="0"
                                        Width="36"
                                        Height="36"
                                        Margin="12,5,5,5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="#FFE6E6"
                                        Kind="BriefcaseAccount">
                                        <iconPacks:PackIconMaterial.Effect>
                                            <DropShadowEffect
                                                Direction="320"
                                                Opacity="0.2"
                                                ShadowDepth="5"
                                                Color="Gray" />
                                        </iconPacks:PackIconMaterial.Effect>
                                    </iconPacks:PackIconMaterial>
                                    <TextBlock
                                        Grid.Column="1"
                                        Style="{StaticResource ActiveViewCardTextStyle}"
                                        Text="{Binding UserName}" />
                                    <CheckBox
                                        Grid.Column="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}"
                                        Style="{StaticResource CustomCheckBoxStyle}" />
                                    <Border
                                        Grid.Column="3"
                                        Margin="10,5,10,5"
                                        Background="LimeGreen"
                                        CornerRadius="5"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="Border_MouseLeftButtonDown">
                                        <iconPacks:PackIconMaterial
                                            Width="24"
                                            Height="24"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Cursor="Hand"
                                            Foreground="Lime"
                                            Kind="Play">
                                            <iconPacks:PackIconMaterial.Effect>
                                                <DropShadowEffect
                                                    Direction="320"
                                                    Opacity="0.2"
                                                    ShadowDepth="3"
                                                    Color="Gray" />
                                            </iconPacks:PackIconMaterial.Effect>
                                        </iconPacks:PackIconMaterial>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Border
                    Width="auto"
                    Padding="0,10,15,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#7469B6"
                    CornerRadius="10"
                    Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <Border
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            CornerRadius="5"
                            Cursor="Hand"
                            MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <iconPacks:PackIconMaterial
                                Width="18"
                                Height="18"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Foreground="Lime"
                                Kind="Play">
                                <iconPacks:PackIconMaterial.Effect>
                                    <DropShadowEffect
                                        Direction="320"
                                        Opacity="0.2"
                                        ShadowDepth="3"
                                        Color="Gray" />
                                </iconPacks:PackIconMaterial.Effect>
                            </iconPacks:PackIconMaterial>
                        </Border>
                        <TextBlock
                            Margin="0"
                            Style="{StaticResource ActiveViewBottomText}"
                            Text="Запустить" />
                    </StackPanel>
                </Border>
                <TextBlock
                    Margin="20,0,0,0"
                    Style="{StaticResource ActiveViewBottomText}"
                    Text="Выбрать всех"
                    TextDecorations="underline" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
